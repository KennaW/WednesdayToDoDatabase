<html>
<head>
    <title>To Do List</title>
</head>
<body>
    <h1>Welcome to To Do List</h1>

    <p>Create a new category:</p>

    <form action="/categories" method="post">
        <label for="name">Category name:</label>
        <input id="name" name="name" type="text">

        <button type="submit">Add category</button>
    </form>


      <form  action="/search" method="post">
          <label for="search">Search</label>
          <input id="search" type="text" name="search">

         <button name="submit">Find</button>
      </form>


    {% if categories is not empty %}
        <p>Here are all your categories:</p>
        <ul>
            {% for category in categories %}
                <li><a href="/categories/{{ category.getId }}">{{ category.getName }}</a>
                    <!-- <form action="/categories/{{ category.getId }}" method="post">
                     <input name = "_method" type = "hidden" value = "delete">

                     <button type = "submit"> Delete this category</button> -->
                     </li>
            {% endfor %}
        </ul>
        {% else %}
            <p>There are no categories yet!</p>
        {% endif %}


</body>
</html>
